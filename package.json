{
	"name": "@openages/if-server",
	"version": "1.0.0",
	"description": "Services for omnitable",
	"main": "dist/index.js",
	"types": "src/trpc",
	"scripts": {
		"dev": "concurrently \"pnpm run watch\" \"wrangler dev --local\"",
		"watch": "cross-env MODE=dev rspack build --watch",
		"build": "cross-env MODE=prod rspack build",
		"genPassword": "bun ./scripts/genPassword",
		"wrangler": "wrangler",
		"cf": "wrangler dev --local",
		"deploy": "pnpm run build && wrangler deploy",
		"login": "wrangler login",
		"db:gen": "cross-env GEN=1 drizzle-kit generate",
		"d1:list": "wrangler d1 migrations list omnitable --local",
		"d1:migrate": "wrangler d1 migrations apply omnitable --local",
		"d1:list:remote": "wrangler d1 migrations list omnitable --remote",
		"d1:migrate:remote": "wrangler d1 migrations apply omnitable --remote",
		"studio:local": "drizzle-kit studio --port 3300",
		"studio:remote": "cross-env NODE_ENV=production drizzle-kit studio --port 3300"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@biomejs/biome": "^1.9.4",
		"@hono-rate-limiter/cloudflare": "^0.2.2",
		"@hono/trpc-server": "^0.3.4",
		"@hono/zod-validator": "^0.4.3",
		"@paddle/paddle-node-sdk": "^2.7.0",
		"@paralleldrive/cuid2": "^2.2.2",
		"@trpc/server": "^11.1.1",
		"app-store-server-api": "^0.17.1",
		"await-to-js": "^3.0.0",
		"crypto-js": "^4.2.0",
		"dayjs": "^1.11.13",
		"drizzle-orm": "^0.43.1",
		"drizzle-zod": "^0.7.1",
		"hono": "^4.7.7",
		"js-xxhash": "^4.0.0",
		"keyv": "^5.3.3",
		"lodash-es": "^4.17.21",
		"lz-string": "^1.5.0",
		"nanoid": "^5.1.5",
		"nice-try": "^3.0.1",
		"ofetch": "^1.4.1",
		"resend": "^4.4.1",
		"ts-pattern": "^5.7.0",
		"zod": "^3.24.3"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20250426.0",
		"@rspack/cli": "1.3.7",
		"@rspack/core": "1.3.7",
		"@types/crypto-js": "^4.2.2",
		"@types/lodash-es": "^4.17.12",
		"@types/nice-try": "^2.1.2",
		"@types/node": "^22.15.2",
		"better-sqlite3": "^11.9.1",
		"bun": "^1.2.10",
		"concurrently": "^9.1.2",
		"cross-env": "^7.0.3",
		"drizzle-kit": "^0.31.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.3",
		"wrangler": "^4.13.2"
	}
}
